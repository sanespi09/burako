{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["dom", "esnext"],
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*", "babel.config.js"]
}
